{
  "extends": ["airbnb-base", "prettier", "prettier/standard", "plugin:jest/recommended"],
  "parser": "babel-eslint",
  "plugins": ["jest"],
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "no-bitwise": 0,
    "no-console": 1,
    "no-param-reassign": ["error", { "props": false }],
    "import/prefer-default-export": 0
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["node_modules", "src"]
      }
    }
  }
}
